<%= simple_form_for(@appointment, html: { method: :post }) do |f| %>
<div class="partial_form">
<%= f.input :address, as: :string, label: "Where do you want to meet?", placeholder: "5333 Casgrain Ave", required: true, input_html: { class: 'input'}, id: 'address' %>
<%= f.input :date, as: :datetime, start_year: Date.today.year, end_year: Date.today.year + 110%>

<%= f.button :submit, "Let's play!" %>
<% end %>


