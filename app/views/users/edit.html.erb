<div class="container profile margin-top" style=" background-image: url('<%= asset_path "blue_background.jpg" %>');">
  <div class="row margin-left">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h2 class="margin-top">UPDATE</h2>
      <h2 class="distance-bottom">PROFILE</h2>
      <%= simple_form_for(@user, url: user_path(@user), html: { method: :put }) do |f| %>
        <div class="form-inputs">
          <%= f.input :first_name, placeholder: "first name", label: false, input_html: { class: 'input'} %>
          <%= f.input :last_name, placeholder: "last name", label: false, input_html: { class: 'input'} %>
          <%= f.input :birth_date, as: :string, start_year: Date.today.year - 90, end_year: Date.today.year, input_html: { class: 'datepicker'} , required: true, placeholder: "birthday", label: false, input_html: { class: 'input'} %>
          <%= f.input :location, as: :string, placeholder: "address", required: true, placeholder: "address", label: false, input_html: { class: 'input'} %>
          <%= f.input :song, placeholder: "spotify url", label: false, input_html: { class: 'input'} %>
          <%= f.input :description, as: :text, placeholder: "Tell us about yourself", label: false, input_html: { class: 'input'} %>
          <%= f.hint "<i class='fa fa-plus white'></i> #{link_to 'add instruments', new_played_instrument_path, class: 'input'}".html_safe, class: 'link-position' %>

        </div>
        <div class="form-actions">
          <%= f.button :submit, "UPDATE", class: 'btn btn-primary input' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
