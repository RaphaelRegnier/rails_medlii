<div class="background" style="background-image: url('<%= image_path "blue_background.jpg" %>');"> </div>
<div class="container profile margin-top">
  <div class="row margin-left">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h2 class="margin-top">UPDATE</h2>
      <h2 class="distance-bottom">PROFILE</h2>

      <%= simple_form_for @user, method: :patch do |f| %>
      <div class="form-inputs">
        <%= f.input :first_name, placeholder: "first name", label: false, input_html: { class: 'input'} %>
        <%= f.input :last_name, placeholder: "last name", label: false, input_html: { class: 'input'} %>
        <%= f.input :birth_date, as: :string, start_year: Date.today.year - 90, end_year: Date.today.year, input_html: { class: 'datepicker input'} , required: true, placeholder: "birthday", label: false %>
        <%= f.input :location, as: :string, placeholder: "address", required: true, placeholder: "address", label: false, input_html: { class: 'input'}, id: 'user_location' %>
        <%= f.input :song, placeholder: "spotify url", label: false, input_html: { class: 'input'} %>
        <%= f.input :description, as: :text, placeholder: "Tell us about yourself", label: false, input_html: { class: 'input'} %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "NEXT", class: 'btn btn-primary input' %>
      </div>

      <% end %>
    </div>
  </div>
</div>
