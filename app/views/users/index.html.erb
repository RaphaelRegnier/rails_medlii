<div class="container text-center">
  <div class="row">
    <% @users.each do | user | %>
    <div class="col-xs-12 col-sm-6 col-md-4 cold-lg-2" >
      <div class="card padded margin">
        <ul class = "list-unstyled">
          <li class = "avatar"> <% avatar_url = user.facebook_picture_url || cl_image_path(user.photo.path) || "http://placehold.it/30x30" %>
          <%= image_tag avatar_url, class: 'avatar-square'%></li>

          <li class = "card-category"> <%= user.first_name %> <%= user.last_name.first %>. </li>
          <li> <%= user.age %></li>
          <li> <%= user.description %> </li>
          <li> <%= user.location %> </li>
          <%= link_to '', users_path, class: "card-link" %>
        </ul>
      </div>
     </div>
    <% end %>
  </div>
</div>




