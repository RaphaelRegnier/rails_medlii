
<div class="wrapper" style="background-image: url('<%= image_path "blue-banner.jpg" %>');">
  <div class="container text-center card-profile">
    <div class="row">
      <div class="col-xs-12">
          <% avatar_url = @user.facebook_picture_url || cl_image_path(@user.photo.path) || "http://placehold.it/30x30" %>
            <%= image_tag avatar_url, class: 'avatar-square-profile'%>
        <ul class = "list-unstyled list-inline ">
          <li> <p><%= @user.first_name.upcase%> <%=@user.last_name.first %>.<p> </li>
          <li> <p> <%= @user_age %> <p></li>
          <li class = "chat-icon"><a href="/users"> <i class="fa fa-comments-o" aria-hidden="true"></i></a>
        </ul>
      </div>
      <div>
      </div>
    </div>
  </div>

  <div class="container text-center card-profile">
    <div class="row">
      <div class="col-xs-12">
        <p> <%= @user.description %> <p>
      </div>
    </div>
  </div>

  <div class="container text-center">
    <div class="row">
      <% @user.played_instruments.each do |played_instrument| %>
        <div class="col-xs-12 col-sm-6 col-md-6">
          <ul class = "list-unstyled">

            <li class = "instrument"> <%= played_instrument.instrument.name %></li>
            <li> Level: <% played_instrument.level.times do %>
              <i class="fa fa-circle"></i>
              <% end %>
              <% (5 - played_instrument.level).times do %>
                <i class="fa fa-circle-o"></i>
              <% end %> </li>
            <li> <%= played_instrument.description %> </li>
          </ul>
        </div>
      <% end %>
    </div>
    <%= link_to "Home", users_path %>

  </div>
</div>


