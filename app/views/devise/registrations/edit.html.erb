<div class="container margin-top">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-login margin padded">
      <h2>Edit Profile<%= resource_name.to_s.humanize %></h2>

      <%= simple_form_for(resource, as: resource_name, url: user_path(current_user), html: { method: :get }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name %>
          <%= f.input :last_name %>
          <%= f.input :birth_date, start_year: Date.today.year - 110, end_year: Date.today.year, input_html: { class: 'datepicker'} %>
          <%= f.input :location, as: :string, label: 'Address', placeholder: "5333 Casgrain Ave" %>
          <%= f.input :description, hint: "Tell us about your instruments!" %>
          <%= f.input :email, required: true, autofocus: true %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
          <%= f.input :password_confirmation, required: false %>
          <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true %>
          <%= f.input :photo, as: :attachinary %>
        </div>

        <div class="form-actions btn-primary">
          <%= f.button :submit, "Update" %>
        </div>
      <% end %>

      <%= link_to new_played_instrument_path do %>
        <h3>Add Instruments</h3>
      <% end %>

      <h3>Cancel my account</h3>

      <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

      <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</div>
