<div class="background" style="background-image: url('<%= image_path "blue_background.jpg" %>');"> </div>
<div class="container edit-profile margin-top">
  <div class="row margin-left">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h2 class="margin-top">EDIT</h2>
      <h2 class="distance-bottom">PROFILE</h2>
      <%= simple_form_for(resource, as: resource_name, url: user_path(current_user), html: { method: :patch }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name, placeholder: "first name", label: false, input_html: { class: 'input'} %>
          <%= f.input :last_name, placeholder: "last name", label: false, input_html: { class: 'input'}  %>
          <%= f.input :birth_date, as: :string, start_year: Date.today.year - 90, end_year: Date.today, input_html: { class: 'datepicker'}, required: true, placeholder: "birthday", label: false, input_html: { class: 'input'}  %>
          <%= f.input :location, as: :string, required: true, placeholder: "address", label: false, input_html: { class: 'input'}  %>
          <%= f.input :description, as: :text, placeholder: "Tell us about yourself", label: false, input_html: { class: 'input'}  %>
          <%= f.input :email, required: true, autofocus: true, placeholder: "email", label: false, input_html: { class: 'input'}  %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :password, autocomplete: "off", required: false, placeholder: "password", label: false, input_html: { class: 'input'}  %>
          <%= f.input :password_confirmation, required: false, placeholder: "confirm password", label: false, input_html: { class: 'input'}  %>
          <%= f.input :current_password, required: true, placeholder: "current password", label: false, input_html: { class: 'input'}  %>
          <%= f.input :photo, as: :attachinary, input_html: { class: 'input'} %>
          <%= f.hint "<i class='fa fa-pencil white'></i>  #{link_to 'edit instrument', new_played_instrument_path, class: 'input'}".html_safe, class: 'link-position' %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "EDIT", class: 'btn btn-primary input' %>
        </div>
      <% end %>

      <h3>CANCEL MY ACCOUNT</h3>

      <p><%= link_to "Delete", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'input btn btn-danger' %></p>

      <%= link_to "Back", :back, class: 'white' %>
    </div>
  </div>
</div>
