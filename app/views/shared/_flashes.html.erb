<% if notice %>
  <div class="alert alert-info alert-dismissible margin-top flashes" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-warning alert-dismissible flashes" role="alert">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
    <%= alert %>
  </div>
<% end %>
